# TeraxAI App Environment Configuration 
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Backend API Configuration
BACKEND_BASE_URL=http://localhost:3000
CLIENT_API_KEY=your_client_api_key_here

# Twilio SMS Configuration (Backend Only - DO NOT put in client)
# These should be set on your backend server
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Google Maps API Key (Client-side - restrict by app package/bundle)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Firebase Configuration (if using Firebase)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_API_KEY=your_firebase_api_key

# Development/Debug Settings
DEBUG_MODE=true
LOG_LEVEL=info

# Emergency Contact Settings
DEFAULT_EMERGENCY_MESSAGE=Emergency! I need help. Please check on me.
LOCATION_SHARE_MESSAGE=I'm sharing my location with you for safety.

# Security Settings
PIN_MIN_LENGTH=4
PIN_MAX_LENGTH=6
BIOMETRIC_TIMEOUT_SECONDS=30

# Background Location Settings
LOCATION_UPDATE_INTERVAL_SECONDS=30
BACKGROUND_LOCATION_ENABLED=false

# Notification Settings
EMERGENCY_NOTIFICATION_SOUND=true
VIBRATION_ENABLED=true

# API Rate Limiting
SMS_RATE_LIMIT_PER_HOUR=10
LOCATION_SHARE_RATE_LIMIT_PER_HOUR=20

# Backup & Recovery
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_DAYS=7

# Analytics & Monitoring (Optional)
ANALYTICS_ENABLED=false
CRASH_REPORTING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=false

# Legal & Compliance
PRIVACY_POLICY_URL=https://your-domain.com/privacy
TERMS_OF_SERVICE_URL=https://your-domain.com/terms
DATA_RETENTION_DAYS=365

# Feature Flags
FACIAL_DISTRESS_DETECTION_ENABLED=true
VOICE_ACTIVATION_ENABLED=true
GESTURE_DETECTION_ENABLED=true
STEALTH_MODE_ENABLED=true
FAKE_POWEROFF_ENABLED=true

# Third-party Integrations
WEATHER_API_KEY=your_weather_api_key
NEWS_API_KEY=your_news_api_key

# Database Configuration (Backend)
DATABASE_URL=postgresql://user:password@localhost:5432/teraxai
REDIS_URL=redis://localhost:6379

# Email Configuration (Backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Webhook URLs (Backend)
EMERGENCY_WEBHOOK_URL=https://your-domain.com/webhooks/emergency
STATUS_WEBHOOK_URL=https://your-domain.com/webhooks/status

# Monitoring & Health Checks
HEALTH_CHECK_URL=https://your-domain.com/health
UPTIME_MONITOR_URL=https://your-monitoring-service.com/webhook

# CDN & Asset URLs
ASSET_BASE_URL=https://cdn.your-domain.com
AVATAR_UPLOAD_URL=https://api.your-domain.com/upload/avatar

# Social Media Integration (Optional)
TWITTER_API_KEY=your_twitter_api_key
FACEBOOK_APP_ID=your_facebook_app_id

# Payment Processing (If premium features)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
PAYPAL_CLIENT_ID=your_paypal_client_id

# Machine Learning & AI
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
AZURE_COGNITIVE_SERVICES_KEY=your_azure_key

# Geofencing & Location Services
GEOFENCE_RADIUS_METERS=100
SAFE_ZONE_CHECK_INTERVAL_SECONDS=60

# Emergency Services Integration
EMERGENCY_SERVICES_API_URL=https://api.emergency-services.gov
EMERGENCY_SERVICES_API_KEY=your_emergency_api_key

# International Emergency Numbers
EMERGENCY_NUMBER_US=911
EMERGENCY_NUMBER_UK=999
EMERGENCY_NUMBER_EU=112
EMERGENCY_NUMBER_AU=000

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko,ar

# App Store Configuration
APP_STORE_URL=https://apps.apple.com/app/teraxai
PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.teraxai.app

# Version & Update Management
MINIMUM_APP_VERSION=1.0.0
FORCE_UPDATE_VERSION=1.0.0
UPDATE_CHECK_URL=https://api.your-domain.com/version-check

# Support & Help
SUPPORT_EMAIL=support@teraxai.com
HELP_CENTER_URL=https://help.teraxai.com
CONTACT_PHONE=+1-800-TERAXAI

# Legal & Compliance URLs
GDPR_COMPLIANCE_URL=https://your-domain.com/gdpr
CCPA_COMPLIANCE_URL=https://your-domain.com/ccpa
COPPA_COMPLIANCE_URL=https://your-domain.com/coppa
